<form class="{{cssClass}} template-grant flexcol" autocomplete="off">

  {{!-- Header --}}
  <header class="sheet-header flexrow">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Grant Item Name"/></h1>
    </div>
  </header>

  {{!-- Tabs --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="config">Config</a>
  </nav>

  <section class="sheet-body">
    {{!-- Description --}}
    <div class="tab description" data-group="primary" data-tab="description">
      <prose-mirror name="system.description" value="{{system.description}}" compact>
        {{{enrichedDescription}}}
      </prose-mirror>
    </div>

    {{!-- Config --}}
    <div class="tab config" data-group="primary" data-tab="config">
      <div class="form-group">
        <label>Grant Type</label>
        <select name="system.grantType">
          {{#each grantTypeChoices as |label key|}}
            <option value="{{key}}" {{#if (eq key @root.system.grantType)}}selected{{/if}}>
              {{localize label}}
            </option>
          {{/each}}
        </select>
      </div>

      <div class="form-group">
        <label>Template</label>
        <select name="system.templateId">
          <option value="">— None —</option>
          {{#each availableGrantTemplates as |tmpl|}}
            <option value="{{tmpl.id}}" {{#if (eq tmpl.id @root.system.templateId)}}selected{{/if}}>
              {{tmpl.name}}
            </option>
          {{/each}}
        </select>
      </div>
    </div>
  </section>
</form>
